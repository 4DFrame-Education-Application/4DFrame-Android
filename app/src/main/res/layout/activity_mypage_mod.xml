<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- 사용자 정보를 위한 데이터 바인딩 변수 정의 -->
        <variable
            name="userName"
            type="String" />
        <variable
            name="userEmail"
            type="String" />
        <variable
            name="userPassword"
            type="String" />
        <variable
            name="userBirthDate"
            type="String" />
        <variable
            name="userPhoneNumber"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".presentation.main.MainActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:contentInsetStart="0dp"
                app:layout_scrollFlags="scroll|enterAlways">

                <Button
                    android:id="@+id/toolbar_previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:background="@drawable/ic_btn_invisible"
                    android:fontFamily="@font/dongle_bold"
                    android:gravity="center"
                    android:text="@string/toolbar_btn_pre"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="78dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/logo3" />

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{userName + `님`}"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/dongle_bold"
            app:layout_constraintTop_toBottomOf="@id/appBarLayout"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp" />

        <!-- 이름 수정 섹션 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/dongle_bold"
            app:layout_constraintTop_toBottomOf="@id/tvUserName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp" />

        <EditText
            android:id="@+id/etUserNameValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@{userName}"
            android:text="@={userName}"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/dongle_bold"
            android:padding="3dp"
            app:layout_constraintTop_toBottomOf="@id/tvUserName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnEditUserName"
            android:layout_marginStart="80dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/btnEditUserName"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_btn_org_stroke"
            android:fontFamily="@font/dongle_bold"
            android:text="수정"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUserName" />

        <!-- 이메일 수정 섹션 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/dongle_bold"
            app:layout_constraintTop_toBottomOf="@id/etUserNameValue"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp" />

        <EditText
            android:id="@+id/etUserEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@{userEmail}"
            android:text="@={userEmail}"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/dongle_bold"
            android:padding="3dp"
            app:layout_constraintTop_toBottomOf="@id/etUserNameValue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnEditUserEmail"
            android:layout_marginStart="80dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/btnEditUserEmail"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="수정"
            android:textSize="12sp"
            android:background="@drawable/ic_btn_org_stroke"
            android:textColor="@color/black"
            android:padding="4dp"
            android:fontFamily="@font/dongle_bold"
            app:layout_constraintTop_toBottomOf="@id/etUserNameValue"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp" />

        <!-- 비밀번호 수정 섹션 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/dongle_bold"
            app:layout_constraintTop_toBottomOf="@id/etUserEmail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp" />

        <EditText
            android:id="@+id/etUserPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@{userPassword}"
            android:text="@={userPassword}"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/dongle_bold"
            android:padding="3dp"
            app:layout_constraintTop_toBottomOf="@id/etUserEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnEditUserPassword"
            android:layout_marginStart="80dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/btnEditUserPassword"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="수정"
            android:textSize="12sp"
            android:background="@drawable/ic_btn_org_stroke"
            android:textColor="@color/black"
            android:padding="4dp"
            android:fontFamily="@font/dongle_bold"
            app:layout_constraintTop_toBottomOf="@id/etUserEmail"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp" />

        <!-- 생년월일 수정 섹션 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생년월일"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/dongle_bold"
            app:layout_constraintTop_toBottomOf="@id/etUserPassword"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp" />

        <EditText
            android:id="@+id/etUserBirthDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@{userBirthDate}"
            android:text="@={userBirthDate}"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/dongle_bold"
            android:padding="3dp"
            app:layout_constraintTop_toBottomOf="@id/etUserPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnEditUserBirthDate"
            android:layout_marginStart="80dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/btnEditUserBirthDate"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="수정"
            android:textSize="12sp"
            android:background="@drawable/ic_btn_org_stroke"
            android:textColor="@color/black"
            android:padding="4dp"
            android:fontFamily="@font/dongle_bold"
            app:layout_constraintTop_toBottomOf="@id/etUserPassword"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp" />

        <!-- 전화번호 수정 섹션 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전화번호"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/dongle_bold"
            app:layout_constraintTop_toBottomOf="@id/etUserBirthDate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp" />

        <EditText
            android:id="@+id/etUserPhoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@{userPhoneNumber}"
            android:text="@={userPhoneNumber}"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/dongle_bold"
            android:padding="3dp"
            app:layout_constraintTop_toBottomOf="@id/etUserBirthDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnEditUserPhoneNumber"
            android:layout_marginStart="80dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/btnEditUserPhoneNumber"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="수정"
            android:textSize="12sp"
            android:background="@drawable/ic_btn_org_stroke"
            android:textColor="@color/black"
            android:padding="4dp"
            android:fontFamily="@font/dongle_bold"
            app:layout_constraintTop_toBottomOf="@id/etUserBirthDate"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>