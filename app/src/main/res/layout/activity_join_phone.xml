<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".presentation.main.MainActivity">

    <!-- 상단 툴바 -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:contentInsetStart="0dp"
            app:layout_scrollFlags="scroll|enterAlways">

            <Button
                android:id="@+id/toolbar_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:background="@drawable/ic_btn_invisible"
                android:fontFamily="@font/dongle_bold"
                android:gravity="center"
                android:text="@string/toolbar_btn_pre"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:fontFamily="@font/dongle_bold"
                android:gravity="center"
                android:padding="10dp"
                android:layout_marginRight="15dp"
                android:text="@string/toolbar_btn_join"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="78dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/logo3" />

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 본문 영역 -->
    <TextView
        android:id="@+id/tvInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="본인인증을 위해\n전화번호를 입력해주세요."
        android:textSize="32sp"
        android:textColor="@color/black"
        android:gravity="start"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:fontFamily="@font/dongle_bold"/>

    <!-- 전화번호 입력과 인증번호 입력란을 동일하게 배치하는 가이드라인 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <!-- 전화번호 입력 -->
    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:background="@color/white"
        android:hint="전화번호 ('-' 제외 11자 입력)"
        android:textSize="20sp"
        android:inputType="phone"
        android:fontFamily="@font/dongle_regular"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
        app:layout_constraintTop_toBottomOf="@id/tvInstruction" />

    <!-- 번호 인증 버튼 -->
    <Button
        android:id="@+id/btnVerifyPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_btn_join_org"
        android:padding="5dp"
        android:text="번호 인증"
        android:fontFamily="@font/dongle_bold"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/guidelineEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/etPhoneNumber" />

    <!-- 인증번호 입력 -->
    <EditText
        android:id="@+id/etVerificationCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="인증번호"
        android:textSize="20sp"
        android:inputType="number"
        android:padding="12dp"
        android:fontFamily="@font/dongle_bold"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guidelineEnd"
        app:layout_constraintTop_toBottomOf="@id/btnVerifyPhone"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp" />

    <!-- 인증 확인 버튼 -->
    <Button
        android:id="@+id/btnCheckCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_btn_join_org"
        android:padding="5dp"
        android:text="인증 확인"
        android:textSize="20sp"
        android:fontFamily="@font/dongle_regular"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/guidelineEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/etVerificationCode" />

    <Button
        android:id="@+id/btnJoinNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orange"
        android:fontFamily="@font/dongle_regular"
        android:padding="12dp"
        android:text="다음"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guidelineEnd" />

</androidx.constraintlayout.widget.ConstraintLayout>